<div class='post'>
  <h1><%= @post_title || item[:title] %></h1>
  <aside>Posted at: <%= item[:created_at] %></aside>
  <article>
    <%= block_given? ? yield : item.compiled_content %>
  </article>

  <ul class="entry-meta">
    <li class="entry-tags">
      Tags: <%= tag_sentence_for(item) %>
    </li>
  </ul>

</div>
